<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="624.0" prefWidth="944.0" spacing="15" 
      xmlns="http://javafx.com/javafx/24.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.cenit.battleship.view.GameViewController">
   <padding><Insets bottom="15" left="15" right="15" top="15" /></padding>
   
   <!-- Barra superior: Estado y controles -->
   <HBox alignment="CENTER" spacing="20">
      <Label fx:id="lblTurno" styleClass="estado-turno" text="TU TURNO" />
      <Label fx:id="lblMensaje" styleClass="mensaje-estado" text="¡Buena suerte, Almirante!" />
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="btnHabilidad" styleClass="btn-special" text="Habilidades" />
      <Button fx:id="btnPausa" styleClass="btn-secondary" text="Pausa" />
      <Button fx:id="btnReiniciar" styleClass="btn-danger" text="Reiniciar" />
   </HBox>
   
   <!-- Contenido principal -->
   <HBox alignment="TOP_CENTER" spacing="30">
      
      <!-- Panel izquierdo: Tablero del jugador -->
      <VBox alignment="CENTER" spacing="10">
         <Label styleClass="panel-title" text="Tu Flota" />
         <GridPane fx:id="tableroJugador" hgap="1" vgap="1" />
         <Label fx:id="lblEstadoJugador" styleClass="estado-flota" text="Barcos: 5/5" />
      </VBox>
      
      <!-- Panel central: Información -->
      <VBox prefWidth="250" spacing="20">
         <VBox fx:id="panelInfoJugador" spacing="5" styleClass="info-panel" />
         <VBox fx:id="panelInfoCPU" spacing="5" styleClass="info-panel" />
         <VBox fx:id="panelHabilidades" spacing="5" styleClass="info-panel" />
      </VBox>
      
      <!-- Panel derecho: Tablero enemigo -->
      <VBox alignment="CENTER" spacing="10">
         <Label styleClass="panel-title" text="Flota Enemiga" />
         <GridPane fx:id="tableroCPU" hgap="1" vgap="1" />
         <Label fx:id="lblEstadoCPU" styleClass="estado-flota" text="Barcos enemigos: 5/5" />
      </VBox>
   </HBox>
   
   <!-- Barra de progreso -->
   <ProgressBar fx:id="progresoPartida" prefWidth="1000" progress="0.0" />
   
   <stylesheets>
        <URL value="@/com/cenit/battleship/styles/mainview.css" />
    </stylesheets>
</VBox>

